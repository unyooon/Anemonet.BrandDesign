{
  "shadow": {
    "none": {
      "$value": "none",
      "$type": "shadow",
      "$description": "シャドウなし"
    },
    "sm": {
      "$value": [
        {
          "offsetX": "0",
          "offsetY": "1px",
          "blur": "3px",
          "spread": "0",
          "color": "rgba(28, 21, 41, 0.08)"
        },
        {
          "offsetX": "0",
          "offsetY": "1px",
          "blur": "2px",
          "spread": "-1px",
          "color": "rgba(28, 21, 41, 0.06)"
        }
      ],
      "$type": "shadow",
      "$description": "小 — カード境界、入力フォーカス (紫みシャドウ)"
    },
    "md": {
      "$value": [
        {
          "offsetX": "0",
          "offsetY": "4px",
          "blur": "6px",
          "spread": "-1px",
          "color": "rgba(28, 21, 41, 0.10)"
        },
        {
          "offsetX": "0",
          "offsetY": "2px",
          "blur": "4px",
          "spread": "-2px",
          "color": "rgba(28, 21, 41, 0.08)"
        }
      ],
      "$type": "shadow",
      "$description": "中 — ドロップダウン、ポップオーバー (紫みシャドウ)"
    },
    "lg": {
      "$value": [
        {
          "offsetX": "0",
          "offsetY": "10px",
          "blur": "15px",
          "spread": "-3px",
          "color": "rgba(28, 21, 41, 0.12)"
        },
        {
          "offsetX": "0",
          "offsetY": "4px",
          "blur": "6px",
          "spread": "-4px",
          "color": "rgba(28, 21, 41, 0.08)"
        }
      ],
      "$type": "shadow",
      "$description": "大 — モーダル、トースト (紫みシャドウ)"
    }
  }
}
